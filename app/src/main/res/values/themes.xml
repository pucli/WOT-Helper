<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WOTHelper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFC107</item>
        <item name="colorSecondaryVariant">#FFC107</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black_transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.WOTHelper.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WOTHelper.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WOTHelper.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="EditText_AuthenticationStyle">
        <item name="android:background">@drawable/custom_textbox</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFF</item>
        <item name="android:textColorHint">#FFFF</item>
    </style>

    <style name="TextInputLayout_AuthenticationStyle">
        <item name="boxBackgroundMode">none</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">true</item>
        <item name="endIconMode">clear_text</item>

        <item name="android:layout_marginTop">4dp</item>
        <item name="helperTextTextColor">#FFC107</item>
    </style>

    <style name="MaterialButton_AuthenticationStyle">
        <item name="android:fontFamily">@font/molen</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@color/auth_button_text_color</item>
        <item name="backgroundTint">@color/auth_button_background_color</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="MaterialButton_GoogleButtonStyle">
        <item name="android:fontFamily">@font/molen</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textColor">@color/auth_button_text_color</item>
        <item name="backgroundTint">@color/auth_button_background_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@color/transparent</item>
        <item name="searchHintIcon">@null</item>
        <item name="iconifiedByDefault">false</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="TextView_Authentication_TitleStyle">
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/molen</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="TextView_Profile_Preferences">
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/hello_sunday</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="TextView_Title_Shadow_Text">
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:shadowRadius">1.6</item>
        <item name="android:fontFamily">@font/molen</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>


</resources>