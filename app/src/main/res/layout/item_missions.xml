<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- Mission Name -->
    <TextView
        android:id="@+id/missionName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/holo_orange_light"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Description Title -->
    <TextView
        android:id="@+id/descriptionTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:textSize="15sp"
        android:textColor="@android:color/holo_orange_light"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/missionName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Description + Hint Text -->
    <TextView
        android:id="@+id/missionDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/descriptionTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Primary Condition Title -->
    <TextView
        android:id="@+id/primaryTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Primary Condition:"
        android:textSize="15sp"
        android:textColor="@android:color/holo_orange_light"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/missionDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Primary Condition Text -->
    <TextView
        android:id="@+id/missionPrimary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/primaryTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Secondary Condition Title -->
    <TextView
        android:id="@+id/secondaryTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Secondary Condition:"
        android:textSize="15sp"
        android:textColor="@android:color/holo_orange_light"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/missionPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Secondary Condition Text -->
    <TextView
        android:id="@+id/missionSecondary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/secondaryTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
